<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <RelativeLayout
        android:id="@+id/linear_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_dialog_listview_txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="@dimen/distance_10"
            android:text=""
            android:textColor="@color/font_blue"
            android:textSize="@dimen/font_size_normal"/>

        <ImageView
            android:id="@+id/item_dialog_listview_img_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/distance_20"
            android:contentDescription="@null"
            android:src="@drawable/icon_blue_focuse"/>

    </RelativeLayout>

    <View
        android:id="@id/view_line"
        style="@style/line_horizontal_gray_style"
        android:layout_below="@id/linear_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
</RelativeLayout>