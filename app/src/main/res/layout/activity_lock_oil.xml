<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/default_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zimi.zimixing.widget.TitleViewPurple
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/rl_lock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_20"
        android:minHeight="40dp">

        <TextView
            android:id="@+id/tv_halt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/distance_20"
            android:text="@string/lock_oil_elect"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_size_normal" />

        <RadioButton
            android:id="@+id/rb_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:paddingLeft="30dp"
            android:layout_marginLeft="@dimen/distance_20"
            android:layout_toRightOf="@id/tv_halt"
            android:button="@null"
            android:drawableTop="@drawable/selector_radio"
            android:textSize="0dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/distance_10"
        android:layout_marginTop="10dp"
        android:background="@color/line_grey_light"
        android:minHeight="40dp" />

    <RelativeLayout
        android:id="@+id/rl_restore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_10"
        android:minHeight="30dp">

        <TextView
            android:id="@+id/tv_restore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/distance_20"
            android:text="@string/restore"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_size_normal" />

        <RadioButton
            android:id="@+id/rb_restore"
            android:paddingLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/distance_20"
            android:layout_toRightOf="@id/tv_restore"
            android:button="@null"
            android:drawableTop="@drawable/selector_radio"
            android:textSize="0dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/distance_10"
        android:layout_marginTop="10dp"
        android:background="@color/line_grey_light" />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"

        android:layout_marginTop="@dimen/distance_20"
        android:background="@drawable/button_backgroud_purple"
        android:text="@string/sure"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_middle" />

</LinearLayout>